{
  "name": "@oai2lmapi/root",
  "version": "0.3.0",
  "private": true,
  "description": "OpenAI-compatible API bridge for VSCode and OpenCode",
  "repository": {
    "type": "git",
    "url": "https://github.com/hugefiver/OAI2LMApi.git"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "clean": "pnpm -r run clean",
    "vscode:compile": "pnpm --filter oai2lmapi run compile",
    "vscode:package": "pnpm --filter oai2lmapi run package",
    "opencode:build": "pnpm --filter @oai2lmapi/opencode-provider run build"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  }
}
