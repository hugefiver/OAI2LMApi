{
  "name": "oai2lmapi",
  "displayName": "OpenAI to Language Model API Bridge",
  "description": "Connect OpenAI-compatible APIs to VSCode's Language Model API for Copilot",
  "version": "0.1.1",
  "publisher": "oai2lmapi",
  "repository": {
    "type": "git",
    "url": "https://github.com/hugefiver/OAI2LMApi.git"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languageModelChatProviders": [
      {
        "vendor": "oai2lmapi",
        "displayName": "OpenAI to Language Model API Bridge",
        "managementCommand": "oai2lmapi.manage"
      }
    ],
    "commands": [
      {
        "command": "oai2lmapi.refreshModels",
        "title": "OAI2LMApi: Refresh Models"
      },
      {
        "command": "oai2lmapi.manage",
        "title": "OAI2LMApi: Manage Provider Settings"
      },
      {
        "command": "oai2lmapi.setApiKey",
        "title": "OAI2LMApi: Set API Key"
      },
      {
        "command": "oai2lmapi.clearApiKey",
        "title": "OAI2LMApi: Clear API Key"
      }
    ],
    "configuration": {
      "title": "OpenAI to Language Model API",
      "properties": {
        "oai2lmapi.apiEndpoint": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "OpenAI-compatible API endpoint URL"
        },
        "oai2lmapi.apiKey": {
          "type": "string",
          "default": "",
          "description": "DEPRECATED: API key is now stored securely. Use the 'OAI2LMApi: Set API Key' command instead. Any value here will be migrated automatically.",
          "deprecationMessage": "API key is now stored securely using VSCode's SecretStorage. Use the 'OAI2LMApi: Set API Key' command to set your API key."
        },
        "oai2lmapi.autoLoadModels": {
          "type": "boolean",
          "default": true,
          "description": "Automatically load models from API on startup"
        },
        "oai2lmapi.showModelsWithoutToolCalling": {
          "type": "boolean",
          "default": false,
          "description": "Show models that do not support tool/function calling. By default, only models with tool calling support are displayed."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run check-types && node esbuild.js --production",
    "compile": "pnpm run check-types && node esbuild.js",
    "compile:tests": "tsc -p ./",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "pretest": "pnpm run compile:tests && pnpm run lint",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.107.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "openai": "^6.15.0"
  }
}
