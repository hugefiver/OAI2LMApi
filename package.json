{
  "name": "oai2lmapi",
  "displayName": "OpenAI to Language Model API Bridge",
  "description": "Connect OpenAI-compatible APIs to VSCode's Language Model API for Copilot",
  "version": "0.1.0",
  "publisher": "oai2lmapi",
  "repository": {
    "type": "git",
    "url": "https://github.com/hugefiver/OAI2LMApi.git"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languageModelChatProviders": [
      {
        "vendor": "oai2lmapi",
        "displayName": "OpenAI to Language Model API Bridge",
        "managementCommand": "oai2lmapi.manage"
      }
    ],
    "commands": [
      {
        "command": "oai2lmapi.refreshModels",
        "title": "OAI2LMApi: Refresh Models"
      },
      {
        "command": "oai2lmapi.manage",
        "title": "OAI2LMApi: Manage Provider Settings"
      },
      {
        "command": "oai2lmapi.setApiKey",
        "title": "OAI2LMApi: Set API Key"
      },
      {
        "command": "oai2lmapi.clearApiKey",
        "title": "OAI2LMApi: Clear API Key"
      }
    ],
    "configuration": {
      "title": "OpenAI to Language Model API",
      "properties": {
        "oai2lmapi.apiEndpoint": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "OpenAI-compatible API endpoint URL"
        },
        "oai2lmapi.apiKey": {
          "type": "string",
          "default": "",
          "description": "DEPRECATED: API key is now stored securely. Use the 'OAI2LMApi: Set API Key' command instead. Any value here will be migrated automatically.",
          "deprecationMessage": "API key is now stored securely using VSCode's SecretStorage. Use the 'OAI2LMApi: Set API Key' command to set your API key."
        },
        "oai2lmapi.defaultModel": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "Default model to use"
        },
        "oai2lmapi.modelFamily": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "Model family identifier for VSCode Language Model API"
        },
        "oai2lmapi.modelVendor": {
          "type": "string",
          "default": "openai",
          "description": "Model vendor identifier"
        },
        "oai2lmapi.maxTokens": {
          "type": "number",
          "default": 4096,
          "description": "Maximum tokens for model"
        },
        "oai2lmapi.autoLoadModels": {
          "type": "boolean",
          "default": true,
          "description": "Automatically load models from API on startup"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.x",
    "@types/vscode": "^1.107.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^8.x",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "openai": "^4.20.0"
  }
}
