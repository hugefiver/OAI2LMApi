{
  "name": "@oai2lmapi/opencode-provider",
  "version": "0.2.0",
  "description": "AI SDK Provider for OpenAI-compatible APIs with automatic model discovery for OpenCode",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./oai2lm.schema.json": "./oai2lm.schema.json"
  },
  "files": [
    "dist",
    "oai2lm.schema.json"
  ],
  "scripts": {
    "build": "node esbuild.cjs && tsc",
    "build:types": "tsc",
    "check-types": "tsc --noEmit",
    "watch": "node esbuild.cjs --watch",
    "clean": "rm -rf dist",
    "test": "echo \"Tests not yet implemented\"",
    "lint": "eslint src"
  },
  "keywords": [
    "opencode",
    "ai-sdk",
    "ai-sdk-provider",
    "openai-compatible",
    "auto-discovery",
    "llm",
    "language-model"
  ],
  "author": "OAI2LMApi Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hugefiver/OAI2LMApi.git",
    "directory": "packages/opencode-provider"
  },
  "dependencies": {
    "@ai-sdk/openai-compatible": "^1.0.0",
    "@oai2lmapi/model-metadata": "workspace:*"
  },
  "peerDependencies": {
    "ai": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "ai": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3"
  }
}
